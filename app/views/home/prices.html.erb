<% if @symbol %>
    <% if @quote["Response"] %>
        <h4>The symbol you entered doesn't exist, please try again...</h4>
    
    <% else %>
    
        <% @quote["DISPLAY"].each do |key, value| %>
            <div class="jumbotron">
              <h1 class="display-4"><%= key %></h1>
                <%= value["USD"]["PRICE"] %> <br/>
                24h High: <%= value["USD"]["HIGHDAY"] %> <br/>
                24h Low: <%= value["USD"]["LOWDAY"] %> <br/>
                Market Cap: <%= value["USD"]["MKTCAP"] %> <br/>
            </div>
        <% end %>
    <% end %>
<% else %>
    <h4>Please enter a symbol in the form above...</h4>
<% end %>

